<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#CDA1CF"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/imageView"

                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/doctor">
                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4DCCDF">
                    <TextView
                        android:id="@+id/agendaTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="lab evaluation"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:textColor="#EDF2FDFD">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="#C0CDCB">
                    <TextView
                        android:id="@+id/dateTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2023-10-12"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:textColor="#EDF2FDFD">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="#13C5A9">
                    <TextView
                        android:id="@+id/timeTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2:30 pm"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:background="#09EDE2"
                        android:textColor="#FCECEFEF">

                    </TextView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>